<h1><%= params[:title].capitalize %> Login</h1>

<%= form_tag "/login/#{params[:title]}" do %>
  Email: <%= text_field_tag :email %><br>
  Password: <%= password_field_tag :password %><br>
  <%= submit_tag "Login" %>
<% end %>

<a href="/<%= params[:title] %>s/new">Create new <%= params[:title] %></a>
